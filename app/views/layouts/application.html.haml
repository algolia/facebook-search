!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, minimal-ui"}
    %title= content_for?(:title) ? yield(:title) : 'Facebook Search powered by Algolia'
    %meta{:name => "description", :content => "Facebook feed search powered by Algolia."}
    %link{:rel => "shortcut icon", :href=> '/favicon.ico'}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

    %meta{name: "twitter:card", content: "summary"}
    %meta{name: "twitter:site", content: "@algolia"}
    %meta{name: "twitter:title", content: "Facebook Feed Search"}
    %meta{name: "twitter:description", content: "Rethink the way you search your Facebook feed."}
    %meta{name: "twitter:image:src", content: asset_url('capture.png')}
    %meta{name: "twitter:domain", content: request.host}

    %meta{property: "st:title", content: "Facebook Search" }
    %meta{property: "og:url", content: request.url }
    %meta{property: "og:site_name", content: 'Facebook Search' }
    %meta{property: "og:title", content: 'Facebook Search' }
    %meta{property: "og:description", content: "Rethink the way you search your Facebook feed." }
    %meta{property: "og:image", content: asset_url('capture.png') }
    %meta{property: "og:image:width", content: '662' }
    %meta{property: "og:image:height", content: '454' }
  %body
    = yield
